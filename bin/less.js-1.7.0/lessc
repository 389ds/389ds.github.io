#! /bin/sh

# Get the directory this script is in. See http://mywiki.wooledge.org/BashFAQ/028
LESSC_BIN_DIR="${BASH_SOURCE%/*}"

if type node &> /dev/null; then
    node ${LESSC_BIN_DIR}/dist/lessc-1.7.0.js "$@"
elif type rhino &> /dev/null ; then
    rhino -f ${LESSC_BIN_DIR}/dist/less-rhino-1.7.0.js ${LESSC_BIN_DIR}/dist/lessc-rhino-1.7.0.js "$@"
elif type lessc &> /dev/null; then
    lessc "$@"
else
    echo "Could not find anything to run LESS with! Install nodejs, rhino, or nodejs-lessc." 1>&2
    exit 1
fi
